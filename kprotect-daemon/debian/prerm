#!/bin/bash
# prerm script for kprotect

set -e

case "$1" in
    remove|deconfigure)
        # Stop the service before removal
        if systemctl is-active --quiet kprotect 2>/dev/null; then
            systemctl stop kprotect || true
        fi
        if systemctl is-enabled --quiet kprotect 2>/dev/null; then
            systemctl disable kprotect || true
        fi
        # Clean up PID file
        rm -f /run/kprotect/kprotect.pid || true
        ;;
    upgrade|failed-upgrade)
        # Don't stop service during upgrade
        ;;
    *)
        echo "prerm called with unknown argument: $1" >&2
        exit 1
        ;;
esac

#DEBHELPER#

